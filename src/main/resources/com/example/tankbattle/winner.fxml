<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tankbattle.control.WinnerController">
    <children>
      <AnchorPane layoutX="50.0" layoutY="50.0" prefHeight="700.0" prefWidth="860.0" />
        <ImageView fitHeight="800.0" fitWidth="960.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@startBackground.png" />
            </image>
        </ImageView>
        <AnchorPane layoutX="50.0" layoutY="50.0" prefHeight="700.0" prefWidth="860.0">
            <children>
                <ImageView fitHeight="700.0" fitWidth="860.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@background-selectplayer.png" />
                    </image>
                </ImageView>
            <Label layoutX="267.0" layoutY="102.0" text="THE WINNER IS" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="44.0" />
               </font>
            </Label>
            <Label fx:id="playerWinnerLbl" layoutX="339.0" layoutY="251.0" text="PLAYER" textFill="WHITE" underline="true">
               <font>
                  <Font name="System Bold Italic" size="50.0" />
               </font>
            </Label>
            <Label layoutX="254.0" layoutY="452.0" text="Do you want to see the scoreboard?" textFill="#80ff6a">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <Button layoutX="354.0" layoutY="515.0" mnemonicParsing="false" text="SCOREBOARD" onAction="#onScoreboardBtnClick">
               <font>
                  <Font name="System Bold" size="19.0" />
               </font></Button>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
